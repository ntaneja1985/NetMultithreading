@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<br/>
<br/>
@currentTime
<br />
<br />
<button type="button" class="btn btn-primary" @onclick="DisplayTime">Display Time</button>

@code {
    string currentTime = string.Empty;
    void DisplayTime()
    {
        Thread thread = new Thread(() =>
        {
            Thread.Sleep(500);
            currentTime = DateTime.Now.ToString();
            base.InvokeAsync(StateHasChanged);
        });
        thread.Start();

    }
}
